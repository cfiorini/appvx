
  <div class="container-fluid">
    <div class='row'>
      <div class="col-12">
        <% if flash[:notice] -%>
          <div class="alert alert-success" role="alert">
            <%= flash[:notice] %>
          </div>
        <% end -%>
        <% if flash[:warning] -%>
          <div class="alert alert-warning" role="alert">
            <%= flash[:warning] %>
          </div>
        <% end -%>
        <% if flash[:error] -%>
          <div class="alert alert-danger" role="alert">
            <%= flash[:error] %>
          </div>
        <% end -%>
      </div>
    </div>
  </div>