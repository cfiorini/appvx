<div class="row">
  <div class="col-2">
    <h1>PopMap</h1>
  </div>
</div>

<div>
  <div class="col">
    <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr>
          <th><%=t 'pop_map.public_name' %></th>
          <th><%=t 'pop_map.full_location' %></th>
          <th><%=t 'pop_map.pm_type' %></th>
          <th><%=t 'pop_map.price' %></th>
        </tr>
      </thead>
      <tbody>
        <% for row in @list %>
          <tr>
            <td><%= row.public_name %></td>
            <td><%= row.full_location %></td>
            <td><%= row.pm_type %></td>
            <td>
              <% if admin_signed_in? %>
                <%= link_to(number_to_currency(row.price), backend_pop_map_edit_path(row.id)) %>
              <% else %>
                <%= number_to_currency(row.price) %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>